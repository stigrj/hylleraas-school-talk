\mode<presentation>
\ProvidesPackage{beamerthemehylleraas}[2018/06/26 hylleraas theme]

\RequirePackage{tikz}
\RequirePackage{ifthen}

%
% Force the user to use \documentclass[8pt]{beamer}.
%
% The template is designed for this font size.
%
% It is possible we should allow other sizes as well.
%
\ifthenelse{\NOT\equal{\beamer@size}{{size8.clo}}}{
\PackageError{beamerthemehylleraas}{You must pass [8pt] as class option to beamer for correct font sizes, i.e., documentclass[8pt]{beamer}.}{}
}{}


%
% Get some images: backgrounds and logos
%
\pgfdeclareimage[width=\paperwidth]{hylleraas1}{hylleraas-background-1.jpg}
\pgfdeclareimage[width=\paperwidth]{hylleraas2}{hylleraas-background-2.jpg}
\pgfdeclareimage[width=\paperwidth]{hylleraas3}{hylleraas-background-3.jpg}
\pgfdeclareimage[width=\paperwidth]{hylleraas4}{hylleraas-background-4.jpg}
\pgfdeclareimage[width=1.5cm]{footlogo-color}{hylleraas-color-rgb.png}
\pgfdeclareimage[width=1.5cm]{footlogo-white}{hylleraas-white-rgb.png}

%
% Define commans that sets which logos to load for the title page top.
%
\newcommand{\hylleraas@darklogos}{
  \def\beamer@innerthemehylleraas@toplogo{hylleraas-white-rgb.pdf}
}
\newcommand{\hylleraas@normallogos}{
  \def\beamer@innerthemehylleraas@toplogo{hylleraas-color-rgb.pdf}
}



