%
% Load various parts of the theme
%
\useinnertheme{hylleraas}
\useoutertheme{hylleraas}
\usecolortheme{hylleraas}
\usefonttheme{hylleraas}

%
% Turn off those pesky naviation symbols
%
\setbeamertemplate{navigation symbols}{}

%
% Add table of contents slide when a new seciton begins
%
\AtBeginSection{%
\begin{frame}
    \tableofcontents[currentsection, subsectionstyle=show/show/hide]
\end{frame}
}

%
% Fancy quotes commands.
%
% The templates are defined in beamerinntertemplatehylleraas.sty
% fancyquote source - the source of the quote
% fancyquote - the text
\RequirePackage{csquotes}
\newsavebox\hylleraas@mybox
\newenvironment{fancyquote}[1][Unknown]
  {\savebox\hylleraas@mybox{\usebeamertemplate{fancyquote source} ---#1}\begin{quote}\usebeamertemplate{fancyquote}\openautoquote\hspace*{-.6ex}}
  {\unskip\closeautoquote\par\vspace{2ex}\usebox\hylleraas@mybox\end{quote}}

  \newenvironment{fancymessage}
    {\begin{quote}\usebeamertemplate{fancyquote}}
    {\unskip\end{quote}}



\mode<all>
